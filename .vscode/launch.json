    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File with Arguments",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args" : ["./.venv"]
        },
        {
            "name": "Run Unit Tests my_dir",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/my_dir_TEST.py",
            "console": "integratedTerminal",
            "args": ["-v"]
        },
    ]
}